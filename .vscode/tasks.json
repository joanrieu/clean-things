{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "tsc: watch",
            "type": "shell",
            "command": "node",
            "args": [
                "./node_modules/.bin/tsc",
                "-w",
                "-p",
                "."
            ],
            "problemMatcher": [
                "$tsc-watch"
            ],
            "isBackground": true
        },
        {
            "label": "rollup: watch",
            "type": "shell",
            "command": "node",
            "args": [
                "./node_modules/.bin/rollup",
                "-w",
                "-c"
            ],
            "isBackground": true,
            "problemMatcher": []
        }
    ]
}